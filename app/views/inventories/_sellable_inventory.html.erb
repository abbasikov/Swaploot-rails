<table id="SellableInventoryTable" class="display shadow-md rounded-lg" style="width:100%; border: none;">

    <thead class="bg-blue text-white">
    <tr>
        <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2 rounded-tl-lg">Item ID</th>
        <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Market Name</th>
        <th class="text-sm px-4 py-2">Market Price</th>
        <th class="text-sm px-4 py-2 rounded-tr-lg">Listed for sale</th>
    </tr>
    </thead>
    <tbody>
     <% sellable_inventory.each do |inventory| %>
        <tr>
         <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= inventory.item_id %></td>
         <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= inventory.market_name %></td>
         <td class=" text-sm text-center px-4 py-2"><%= "$#{inventory.market_price&.to_f.round(3)}" %></td>
         <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= inventory.listed_for_sale %></td>
        </tr>
     <% end %>    
 </tbody>
</table>

<script>
    var dataTable = $('#SellableInventoryTable').DataTable({
            "order": [[2, 'desc']],
            paging: false,
            info: false,
            language: {
        search: "_INPUT_",
        searchPlaceholder: "Search...",
      },
        });
</script>

    