<table id="missingItemTable" class="display" style="width:100%">
  <thead>
  <tr>
    <th class="px-4 py-2">Item ID</th>
    <th class="px-4 py-2">Market Name</th>
    <th class="px-4 py-2">Market Price</th>
  </tr>
  </thead>
  <tbody>
  <% missing_items.each do |item| %>
    <tr>
      <td class="border text-center px-4 py-2"><%= item.item_id %></td>
      <td class="border text-center px-4 py-2"><%= item.market_name %></td>
      <td class="border text-center px-4 py-2"><%= "$#{item.market_price}" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<script>
    var dataTable = $('#missingItemTable').DataTable({
        "order": [[2, 'desc']],
        paging: true,
        pageLength: 10,
    });
</script>

