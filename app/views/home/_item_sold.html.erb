<div class="flex">
    <h2 class="text-2xl font-bold mb-4">Items Sold</h2>
    <i class="fa fa-refresh" aria-hidden="true"></i>
</div>

<table id="dataTableItemsSold" class="display" style="width:100%">
    <thead>
        <tr>
            <th class="px-4 py-2">Item ID</th>
            <th class="px-4 py-2">Item Name</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Date</th>
        </tr>
    </thead>
    <tbody>
    <% sold_items.each do |sold_item| %>
        <tr class="bg-red-600">
            <td class="border text-center px-4 py-2 bg-red-600"><%= sold_item['item_id'] %></td>
            <td class="border text-center px-4 py-2"><%= sold_item['name'] %></td>
            <td class="border text-center px-4 py-2"><%= "$#{sold_item['price'].to_f / 1000}" %></td>
            <td class="border text-center px-4 py-2"><%= Time.parse(sold_item['date']).strftime("%d/%B/%Y") %></td>
        </tr>
        <% end %>
    </tbody>
</table>