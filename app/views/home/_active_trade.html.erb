    <table id="activeTradePartial" class="display shadow-md rounded-lg" style="width:100%; border: none;">

    <thead class="bg-blue text-white">
        <tr>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2 rounded-tl-lg">Item ID</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Item Name</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Current Price</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Site</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2 rounded-tr-lg">Date</th>
        </tr>
    </thead>
    <tbody>
    <% @auction_items_hash&.each do |item| %>
    <tr>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= item['item_id'] %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= item['market_name'] %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= "$#{item['price']}" %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= item['site'] %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= item['date'] %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<script>
    $(document).ready(function() {
        $('#activeTradePartial').DataTable({
            paging: <%= @auction_items_hash.present? ? true : false %>,
            label: false,
            pageLength: 10,
                language: {
            search: "_INPUT_",
            searchPlaceholder: "Search...",
            } // Number of records per page
            // Other DataTables options...
        });

        const searchInputs = document.querySelectorAll('input[type="search"]');
        searchInputs.forEach(function(input) {
            input.style.marginBottom = '10px'
        });

        var elements = document.querySelectorAll('.dataTables_length');
        for (var i = 0; i < elements.length; i++) {
            elements[i].parentNode.removeChild(elements[i]);
        }
     });
</script>