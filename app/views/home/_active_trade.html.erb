<table id="activeTradePartial" class="dis({
        paging: true,
        pageLength: 10, // Number of records per page
        // Other DataTables options...
    });y" style="width:100%">
    <thead>
        <tr>
            <th class="px-4 py-2">Item ID</th>
            <th class="px-4 py-2">Item Name</th>
            <th class="px-4 py-2">Current Price</th>
            <th class="px-4 py-2">Type</th>
            <th class="px-4 py-2">Date</th>
        </tr>
    </thead>
    <tbody>
    <% active_trades&.each do |active_trade| %>
    <tr>
        <td class="border text-center px-4 py-2"><%= active_trade["item_id"] %></td>
        <td class="border text-center px-4 py-2"><%= active_trade["item"]["market_name"] %></td>
        <td class="border text-center px-4 py-2"><%= "$#{active_trade["item"]["market_value"]}" %></td>
        <td class="border text-center px-4 py-2"><%= active_trade["sellarbuy"] %></td>
        <td class="border text-center px-4 py-2"><%= Time.parse(active_trade["item"]["updated_at"]).strftime("%d/%B/%Y") %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<script>
    $('#activeTradePartial').DataTable({
        paging: true,
        pageLength: 10, // Number of records per page
        // Other DataTables options...
    });
</script>