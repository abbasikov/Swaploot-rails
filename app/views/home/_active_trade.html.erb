    <table id="activeTradePartial" class="display shadow-md rounded-lg" style="width:100%; border: none;">

    <thead class="bg-blue-600 text-white">
        <tr>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2 rounded-tl-lg">Item ID</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Item Name</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Current Price</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2">Type</th>
            <th class="border-r border-r-[#acadaf9c] text-sm px-4 py-2 rounded-tr-lg">Date</th>
        </tr>
    </thead>
    <tbody>
    <% active_trades&.each do |active_trade| %>
    <tr>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= active_trade["item_id"] %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= active_trade["item"]["market_name"] %></td>
        <td class="border-r border-r-[#acadaf9c] text-sm text-center px-4 py-2"><%= "$#{active_trade["item"]["market_value"]}" %></td>
