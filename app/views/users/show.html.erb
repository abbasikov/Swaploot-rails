<div class="text-gray-600 font-bold text-center py-5 text-3xl">Associated Steam Accounts</div>
<hr class="bg-gray-400 h-px w-full mb-3">

<div class="px-[15%] py-[2%]">
    <% @user_accounts_data.each do |user_account_data| %>
    <% @steam_account = SteamAccount.find_by(steam_id: user_account_data[:data]['steam_id']) %>
    <div class="text-blue-600 font-semibold mb-2 text-2xl">Steam Account: <%= @steam_account.unique_name %></div>
      <div class="flex  md:flex-row flex-wrap mb-10 shadow-md rounded-lg">
        <div class="w-full border-b rounded-t-lg md:w-1/4 bg-blue-600 p-4 text-center text-white">Steam ID</div>
        <div class="w-full border-b rounded-tr-lg md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['steam_id'] %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">Steam Name</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['steam_name'] %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">Last Login</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['last_login'].to_datetime.strftime("%B-%d-%Y | %R") %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">Steam Level</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['steam_level'] %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">Trade URL</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['trade_url'] %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">CsgoEmpire Balance</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:data]['balance'] ? "#{number_with_precision(user_account_data[:data]['balance'].to_f / 100, precision: 2)} Coins" : "--" %></div>

        <div class="w-full border-b md:w-1/4 bg-blue-600 p-4 text-center text-white">Waxpeer Balance</div>
        <div class="w-full border-b md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:waxpeer_balance] ? "$ #{user_account_data[:waxpeer_balance]}" : "--" %></div>

        <div class="w-full border-b rounded-b-lg md:w-1/4 bg-blue-600 p-4 text-center text-white">Market.Csgo Balance</div>
        <div class="w-full border-b rounded-br-lg md:w-3/4 bg-white p-4 text-center text-gray-500"><%= user_account_data[:market_csgo_balance] ? "$ #{user_account_data[:market_csgo_balance]}" : "--" %></div>
      </div>
  <% end %>
</div>