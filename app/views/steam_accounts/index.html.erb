<div class="p-6">
  <a href="<%= new_steam_account_path %>" class="mt-6  mb-3 inline-block bg-blue-600 text-gray-100 font-[300] px-4 py-2 rounded-lg shadow-md hover:bg-blue-600">Add New Steam Account</a>

 <div class="container mx-auto py-4 ">
 <div style= "display: flex;">
    <h2 class="text-lg text-blue-600 font-[600] absolute">Connected Steam Accounts</h2>
</div>

<table id="dataTableSteamAccount" class="display shadow-md rounded-lg" style="width:100%; border: none;">
    <thead class="bg-blue-600 text-white font-[300]">
        <tr>
            <th class="px-4  py-2 border border-r-gray-200 rounded-tl-lg">Steam ID</th>
            <th class="px-4  py-2 border border-r-gray-200">Name</th>
            <th class="px-4  py-2 border border-r-gray-200">Steam Web API Key</th>
            <th class="px-4  py-2 border border-r-gray-200">Waxpeer API Key</th>
            <th class="px-4  py-2 border border-r-gray-200">CSGOEmpire API Key</th>
            <th class="px-4  py-2 border border-r-gray-200">Market.CSGO API Key</th>
            <th class="px-4  py-2 rounded-tr-lg">Action</th>
        </tr>
    </thead>
    <tbody>
     <% @steam_accounts.each do |steam_account| %>
        <tr class="hover:bg-gray-100">
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200 rounded-bl-lg"><%= steam_account.steam_id %></td>
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200"><%= steam_account.unique_name %></td>
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200"><%= steam_account.steam_web_api_key %></td>
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200"><%= steam_account.waxpeer_api_key %></td>
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200"><%= steam_account.csgoempire_api_key %></td>
          <td class="text-center px-4 py-2 min-w-10 break-all border border-r-gray-200"><%= steam_account.market_csgo_api_key %></td>
          <td class="text-center px-4 py-2 rounded-br-lg">
          <%= link_to "Edit", edit_steam_account_path(id: steam_account), class: "mr-3 text-blue-500 hover:text-blue-700" %>
          <%=form_tag(steam_account_path(id: steam_account), method: :delete, id: "delete-steam-account") do %>
            <button class='ml-3 text-red-500 hover:text-red-700' type="button" onclick="openModal()">Delete</button>
          <% end %>
         </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>



<div id="small-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <button type="button" onclick="closeModal()" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="small-modal">
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
        <span class="sr-only">Close modal</span>
      </button>
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
          </svg>
          <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Are you sure you want to delete this account?</h3>
          <button data-modal-hide="small-modal" onclick="submitForm()" id="delete" type="button" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            Yes, I'm sure
          </button>
          <button data-modal-hide="small-modal" onclick="closeModal()" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">No, cancel</button>
        </div>
    </div>
  </div>
</div>

<script>
 
  function openModal() {
    var modal = document.getElementById("small-modal");
    modal.style.display = "flex";
  }

  function submitForm() {
    var formm = document.getElementById("delete-steam-account")
    formm.submit()
  }

  function closeModal() {
    var modal = document.getElementById("small-modal");
    modal.style.display = "none";
  }

    $(document).ready(function() {
        $('#dataTableSteamAccount').DataTable();
            const searchInputs = document.querySelectorAll('input[type="search"]');
