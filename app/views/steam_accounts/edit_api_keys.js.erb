id = <%= @steam_account.id %>;
document.querySelector(`#edit-verifying-div-${id}`).classList.add('hidden');
<% if @success %>
  window.location.href = '<%= edit_steam_account_path(id: @steam_account.id) %>';
<% else %>
  document.querySelector("#edit-error-div-" + id).classList.remove('hidden');
<% end %>