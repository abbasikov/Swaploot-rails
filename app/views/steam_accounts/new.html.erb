<div class="p-6">
  <h1 class="text-3xl font-bold mb-6">Add a New Steam Account</h1>

  <%= form_with model: @steam_account, url: steam_accounts_path, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :steam_id, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :steam_id, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue-400' %>
    </div>

    <div class="mb-4">
      <%= form.label :steam_web_api_key, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :steam_web_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue-400' %>
    </div>

    <div class="mb-4">
      <%= form.label :waxpeer_api_key, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :waxpeer_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue-400' %>
    </div>

    <div class="mb-4">
      <%= form.label :csgoempire_api_key, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :csgoempire_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue-400' %>
    </div>

    <div class="mb-4">
      <%= form.label :market_csgo_api_key, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :market_csgo_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue-400' %>
    </div>

    <div class="mb-4">
      <%= form.submit "Add Steam Account", class: 'bg-blue-500 text-gray-700 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-blue-600' %>
    </div>
  <% end %>

  <a href="<%= steam_accounts_path %>" class="inline-block bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-lg shadow-md hover:bg-gray-400">Back to Steam Accounts</a>
</div>
