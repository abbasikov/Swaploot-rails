<div class="p-6">
  <%= form_with model: @steam_account, url: steam_account_path(id: @steam_account), local: true do |form| %>
    <div class="mb-4">
      <%= form.label :steam_id, 'Steam ID', class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :steam_id, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.steam_id %>
    </div>

    <div class="mb-4">
      <%= form.label :unique_name, class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :unique_name, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.unique_name %>
    </div>

    <div class="mb-4">
      <%= form.label :steam_web_api_key, class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :steam_web_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.steam_web_api_key %>
    </div>

    <div class="mb-4">
      <%= form.label :waxpeer_api_key, class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :waxpeer_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.waxpeer_api_key %>
    </div>

    <div class="mb-4">
      <%= form.label :csgoempire_api_key, class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :csgoempire_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.csgoempire_api_key %>
    </div>

    <div class="mb-4">
      <%= form.label :market_csgo_api_key, class: 'block text-grayDark font-bold mb-2 dark:text-white' %>
      <%= form.text_field :market_csgo_api_key, class: 'w-full px-4 py-2 border rounded-lg shadow-md focus:outline-none focus:ring focus:ring-blue', value: @steam_account.market_csgo_api_key %>
    </div>

    <div class="mb-4">
      <%= form.submit "Update Steam Account", class: 'bg-blue text-white font-bold py-2 px-4 rounded-lg shadow-md hover:bg-blue' %>
    </div>
  <% end %>

  <a href="<%= steam_accounts_path %>" class="inline-block bg-gray text-white dark:text-black font-bold py-2 px-4 rounded-lg shadow-md hover:bg-gray">Back to Steam Accounts</a>
</div>